<% include ../partials/header %>

<div class="ui main text container segment">
   <div class="ui huge header">Create a new session</div>

   <form class="ui form" action="/workouts" method="POST">
      <div class="field">
         <label>Workout</label>
        <input type="text" name="routine[title]" placeholder=".eg Upper Body, Cardio"> 
      </div>
         
      <div class="field">
            <label>Date</label>
            <input type="text" name="routine[date]" placeholder="01/01/2018" required>
         </div>
         
         <div class="field">
               <label>Notes</label>
               <textarea name="routine[notes]"></textarea>
            </div>
   
         <input class="ui blue big basic button" type="submit">
   </form>
</div>


