<% include ../partials/header %>

<div class="ui main text container segment">
      <div class="ui huge header">Edit <%=workout.title%></div>
   
      <form class="ui form" action="/workouts/<%=workout._id%>?_method=PUT" method="POST">  <!--add '?_method=PUT' to end of query string to make into PUT request-->
         <div class="field">
            <label>Title</label>
           <input type="text" name="workout[title]" value="<%=workout.title%>"> 
         </div>
            
         <div class="field">
               <label>Image</label>
               <input type="text" name="workout[date]" value="<%=workout.date%>">
            </div>
            
            <div class="field">
                  <label>Body</label>
                  <textarea name="workout[notes]" required><%= workout.notes%></textarea>
               </div>
      
            <input class="ui blue big basic button" type="submit">
      </form>
   </div>

<% include ../partials/footer %>